[Unit]
Description=IceNet-OS Thermal Management System
Documentation=https://github.com/IceNet-01/thermal-management-system
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/icenet-thermal-daemon
Restart=always
RestartSec=10
User=root
StandardOutput=journal
StandardError=journal

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/icenet/thermal

[Install]
WantedBy=multi-user.target
